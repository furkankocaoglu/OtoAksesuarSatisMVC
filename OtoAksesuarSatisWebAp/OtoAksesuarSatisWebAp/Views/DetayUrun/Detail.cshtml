@model OtoAksesuarSatisWebAp.Models.Urun
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared1/_LayoutPage1.cshtml";
}
@section styles {
    <link href="~/Assets/CSS/UrunDetay.css" rel="stylesheet" />
}
<div class="detailContainer">
    <div class="image">
        <img src="~/Assets/ProductImages/@Model.ResimYolu" />
    </div>
    <div class="detail">
        <h2>@Model.Marka.MarkaAdi - @Model.UrunAdi</h2>
        <hr />
        <div class="row">
            @Model.Kategori.KategoriAdi @Model.Marka.MarkaAdi
        </div>
        <div class="row priceRow">
            @{ decimal fakeprice = Model.Fiyat + 300; }
            <label style="text-decoration:line-through"> @fakeprice ₺</label>
            <strong style="color: #7e0490"> @Model.Fiyat ₺</strong>
        </div>

        @using (Html.BeginForm("DetailAdd", "Cart", FormMethod.Post, new { id = Model.UrunID }))
        {
            <div class="row">
                <input type="number" id="quantity" class="buyText" value="1" />
                <button type="submit" class="buyButton">Sepete Ekle</button>
            </div>
        }
    </div>
    <div style="clear:both"></div>
</div>
<div class="description">
    <h3>Detay</h3>
    <hr />
    <div class="descriptionContainer">
        @Model.Aciklama
    </div>
</div>


