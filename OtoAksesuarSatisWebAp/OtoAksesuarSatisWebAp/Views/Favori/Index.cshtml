@using OtoAksesuarSatisWebAp.Models
@model IEnumerable<OtoAksesuarSatisWebAp.Models.Favori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared1/_LayoutPage1.cshtml";
}
@if (TempData["info"] != null)
{
    <div class="validation-summary-warning">
        @TempData["info"]
        @{
            TempData["info"] = null;
        }
    </div>
}
<div class="pageTitle">
    <h3>Favorilerim</h3>
</div>
<table class="tablo" cellpadding="0" cellspacing="0">

    @foreach (Favori item in Model)
    {
        <tr>

            <td>
                <img src="~/Assets/ProductImages/@item.Urun.ResimYolu" width="56" />
            </td>
            <td>
                <a href="@Url.Action("","")">@item.Urun.UrunAdi</a>
            </td>

            <td>
                @{ decimal fakeprice = item.Urun.Fiyat + 500; }
                <label style="text-decoration:line-through"> @fakeprice ₺</label>&nbsp;&nbsp;&nbsp;
                <strong style="color: #7e0490"> @item.Urun.Fiyat ₺</strong>
            </td>
            <td>
                <a href="@Url.Action("Remove","Favori", new {id = item.FavoriID})">Favorilerimden Çıkart</a>
            </td>
        </tr>
    }
</table>

