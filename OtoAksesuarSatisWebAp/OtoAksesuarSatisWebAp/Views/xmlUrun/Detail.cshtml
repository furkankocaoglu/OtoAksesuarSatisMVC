@using OtoAksesuarSatisWebAp.Models
@model OtoAksesuarSatisWebAp.Models.XMLUrun
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared1/_LayoutPage1.cshtml";


    string fiyatSeviyesi = "Bronz";


    var yonetici = Session["YoneticiSession"] as Yonetici;
    if (yonetici != null)
    {
        fiyatSeviyesi = yonetici.YoneticiIsim;
    }
    else
    {

        fiyatSeviyesi = "Bronz";
    }


    decimal fiyat = 0;
    switch (fiyatSeviyesi.ToLower())
    {
        case "bronz":
            fiyat = Model.BronzFiyat;
            break;
        case "silver":
            fiyat = Model.SilverFiyat;
            break;
        case "gold":
            fiyat = Model.GoldFiyat;
            break;
        default:

            fiyat = Model.BronzFiyat;
            break;
    }


    decimal fakeprice = fiyat + 500;
}
@section styles {
    <link href="~/Assets/CSS/DetailXML.css" rel="stylesheet" />
}

<div class="detailContainer">
    <div class="image">

        <img src="~/Assets/ProductImages/@Model.Resim" alt="@Model.UrunAdi" />
    </div>
    <div class="detail">
        <h2>@Model.Marka - @Model.UrunAdi</h2>
        <hr />
        <div class="row">
            @Model.Kategori
        </div>
        <div class="row priceRow">

            <label style="text-decoration:line-through"> @fakeprice ₺</label>&nbsp;&nbsp;&nbsp;
            <strong style="color: #7e0490"> @fiyat ₺</strong>
        </div>


        @using (Html.BeginForm("DetailAdd", "Cart", FormMethod.Post, new { id = Model.XmlUrunID }))
        {
            <div class="row">
                <input type="number" id="quantity" class="buyText" value="1" min="1" max="@Model.Stok" />
                <button type="submit" class="buyButton">Sepete Ekle</button>
            </div>
        }
    </div>
    <div style="clear:both"></div>
</div>

<div class="description">
    <h3>Detay</h3>
    <hr />
    <div class="descriptionContainer">
        @Model.Aciklama
    </div>
</div>






