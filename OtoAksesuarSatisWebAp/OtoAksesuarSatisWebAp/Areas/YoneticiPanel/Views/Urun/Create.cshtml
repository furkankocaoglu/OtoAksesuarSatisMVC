@model OtoAksesuarSatisWebAp.Models.Urun
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/YoneticiPanel/Views/Shared/_LayoutPage1.cshtml";
}
<div class="pagetitle">
    <h2>Ürün Ekle</h2>
</div>
<div class="pagetitle">
    <h2>Ürün Ekle</h2>
</div>
<div class="formContainer">
    @using (Html.BeginForm("Create", "Urun", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        if (ViewBag.mesaj != null)
        {
            <label class="validationmesage">@ViewBag.mesaj</label>
        }
        <div class="sol">
            <div class="row">
                <label>Isim</label>
                @Html.EditorFor(x => x.UrunAdi, new { htmlAttributes = new { @class = "textbox" } })
                @Html.ValidationMessageFor(x => x.UrunAdi, "", new { @class = "validationmesage" })
            </div>
            <div class="row">
                <label>Kategori Seçiniz</label>
                @Html.DropDownList("KategoriID", (SelectList)ViewBag.Kategori_ID, null, new { @class = "textbox" })
            </div>
            <div class="row">
                <label>Marka Seçiniz</label>
                @Html.DropDownList("MarkaID", (SelectList)ViewBag.Marka_ID, null, new { @class = "textbox" })
            </div>
            <div class="row">
                <label>Açıklama</label>
                @Html.EditorFor(x => x.Aciklama, new { htmlAttributes = new { @class = "textbox" } })
                @Html.ValidationMessageFor(x => x.Aciklama, "", new { @class = "validationmesage" })
            </div>
        </div>
        <div class="sag">
            <div class="row">
                <label>Stok</label>
                @Html.EditorFor(x => x.StokMiktari, new { htmlAttributes = new { @class = "textbox" } })
                @Html.ValidationMessageFor(x => x.StokMiktari, "", new { @class = "validationmesage" })
            </div>
            <div class="row">
                <label>Fiyat</label>
                @Html.EditorFor(x => x.Fiyat, new { htmlAttributes = new { @class = "textbox" } })
                @Html.ValidationMessageFor(x => x.Fiyat, "", new { @class = "validationmesage" })
            </div>
            <div class="row">
                <label>Resim</label>
                <input type="file" name="image" class="textbox" />
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <button type="submit" class="formbutton">Ürün Ekle</button>
        </div>
    }
</div>

