@model IEnumerable<OtoAksesuarSatisWebAp.Models.Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/YoneticiPanel/Views/Shared/_LayoutPage1.cshtml";
}
<div class="pagetitle">
    <h2>Urunler</h2>
</div>
<div class="">
    @if (TempData["mesaj"] != null)
    {
        <h3 style="color:forestgreen; margin-bottom:10px;">@TempData["mesaj"]</h3>
        TempData["mesaj"] = null;
    }
    <table class="tablo" cellspacing="0" cellpadding="0">
        <tr>
            <th>Resim</th>
            <th>ID</th>
            <th>Isim</th>
            <th>Kategori</th>
            <th>Marka</th>
            <th>Stok</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
        @foreach (OtoAksesuarSatisWebAp.Models.Urun item in Model)
        {
            <tr>
                <td align="center">
                    <img src="~/Assets/ProductImages/@item.ResimYolu" width="50" />
                </td>
                <td>@item.UrunID</td>
                <td>@item.UrunAdi</td>
                <td align="center">@item.Kategori.KategoriAdi</td>
                <td align="center">@item.Marka.MarkaAdi</td>
                <td align="center">@item.StokMiktari Adet</td>
                <th align="center">@item.Fiyat ₺</th>
                <td>
                    <a href="@Url.Action("Edit","Urun", new {id = item.UrunID})" class="editbutton">Düzenle</a>
                    <a href="@Url.Action("Delete","Urun", new {id = item.UrunID})" class="deletebutton">Sil</a>
                </td>
            </tr>
        }
    </table>
</div>

