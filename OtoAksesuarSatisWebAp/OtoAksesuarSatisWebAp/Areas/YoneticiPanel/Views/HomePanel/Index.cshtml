@using OtoAksesuarSatisWebAp.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/YoneticiPanel/Views/Shared/_LayoutPage1.cshtml";
}
<h2>HomePanel Index</h2>
<<h2>HomePanel Index</h2>
<h2>Admin Paneli</h2>


<form action="@Url.Action("UrunleriAktar", "HomePanel")" method="post">
    <button type="submit" class="btn btn-primary">Ürünleri Aktar</button>
</form>

@if (ViewBag.Urunler != null && ViewBag.Urunler is List<Urun>)
{
    var urunler = ViewBag.Urunler as List<Urun>;
    <table class="table">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Stok</th>
                <th>Açıklama</th>
                <th>Resim</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var urun in urunler)
            {
                <tr>
                    <td>@urun.UrunAdi</td>
                    <td>@urun.Fiyat.ToString("F2")</td> <!-- Fiyatı doğru formatta görüntülüyoruz -->
                    <td>@urun.StokMiktari</td>
                    <td>@urun.Aciklama</td>
                    <td>
                        <img src="@Url.Content("~/Content/Images/" + urun.ResimYolu)" alt="@urun.UrunAdi" width="50" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        @ViewBag.Urunler
    </div>
}

@if (TempData["Mesaj"] != null)
{
    <div class="alert alert-info">
        @TempData["Mesaj"]
    </div>
}
