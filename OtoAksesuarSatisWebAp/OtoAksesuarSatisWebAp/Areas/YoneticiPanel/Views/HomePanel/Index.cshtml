@using OtoAksesuarSatisWebAp.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/YoneticiPanel/Views/Shared/_LayoutPage1.cshtml";
    string fiyatSeviyesi = Session["FiyatSeviyesi"]?.ToString() ?? "Bronz"; // Varsayılan Bronz
}
<h1>ÜRÜNLER</h1>
<h2>Admin Paneli</h2>


@if (ViewBag.Urunler != null && ViewBag.Urunler is List<OtoAksesuarSatisWebAp.Models.XMLUrun>)
{
    var urunler = ViewBag.Urunler as List<OtoAksesuarSatisWebAp.Models.XMLUrun>;
    <table class="table">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>@fiyatSeviyesi Fiyat</th> <!-- Dinamik başlık -->
                <th>Stok</th>
                <th>Açıklama</th>
                <th>Resim</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var urun in urunler)
            {
                decimal fiyat = 0;

                switch (fiyatSeviyesi.ToLower())
                {
                    case "bronz":
                        fiyat = urun.BronzFiyat;
                        break;
                    case "silver":
                        fiyat = urun.SilverFiyat;
                        break;
                    case "gold":
                        fiyat = urun.GoldFiyat;
                        break;
                }

                <tr>
                    <td>@urun.UrunAdi</td>
                    <td>@fiyat.ToString("C2")</td>
                    <td>@urun.Stok</td>
                    <td>@urun.Aciklama</td>
                    <td>
                        <img src="@Url.Content("~/Content/Images/" + urun.Resim)" alt="@urun.UrunAdi" width="50" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        @ViewBag.Urunler
    </div>
}

@if (TempData["Mesaj"] != null)
{
    <div class="alert alert-info">
        @TempData["Mesaj"]
    </div>
}